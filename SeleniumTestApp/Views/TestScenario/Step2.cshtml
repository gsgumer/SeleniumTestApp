
@{
    ViewBag.Title = "Step2";
}

@if (ViewBag.Error != null)
{
    <h3  style="color:red">@ViewBag.Error</h3>
    <hr />
}

@using (Html.BeginForm("Step2", "TestScenario", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <h2>Welcome to Step2</h2>

    <h3>Click on following link to go settings and where you can find the 'logout' button to logout.</h3>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        @Html.Label("Password", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBox("txtPassword", null, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Select Action", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("ActionType",
                         new List<SelectListItem> {
                                   new SelectListItem { Text = "LogOut", Value="1" },
                                   new SelectListItem { Text = "Go Back", Value = "2" }
                         }, "Select Action", new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Continue" class="btn btn-primary" />
        </div>
    </div>
}